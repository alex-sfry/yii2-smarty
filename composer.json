{
    "name": "yiisoft/yii2-smarty",
    "description": "The Smarty integration for the Yii framework",
    "keywords": [
        "yii2",
        "smarty",
        "renderer"
    ],
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii2-smarty/issues",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "ircs://irc.libera.chat:6697/yii",
        "source": "https://github.com/yiisoft/yii2-smarty"
    },
    "authors": [
        {
            "name": "Alexander Makarov",
            "email": "sam@rmcreative.ru"
        }
    ],
    "require": {
        "php": ">=7.4",
        "yiisoft/yii2": "^2.0.54",
        "smarty/smarty": "^4.2.0"
    },
    "require-dev": {
        "yiisoft/yii2-coding-standards": "~3.0",
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "yii\\smarty\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "yiiunit\\smarty\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "config": {
        "secure-http": false,
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
